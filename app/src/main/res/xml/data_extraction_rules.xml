<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include SharedPreferences for user settings (e.g., API keys, preferences) -->
        <include domain="sharedpref" path="." />
        <!-- Include Room database if you're storing speed limit data locally -->
        <include domain="database" path="." />
        <!-- Include app-specific files, e.g., for offline data -->
        <include domain="file" path="app_data/" />
        <!-- Exclude cache files to reduce backup size -->
        <exclude domain="file" path="cache/" />
        <!-- Exclude temporary files -->
        <exclude domain="file" path="temp/" />
    </cloud-backup>
    <!--
    <device-transfer>
        <include .../>
        <exclude .../>
    </device-transfer>
    -->
</data-extraction-rules>